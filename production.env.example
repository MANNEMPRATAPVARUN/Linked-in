# JobSprint Production Environment Variables
# Copy this file to .env and fill in the actual values

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://eazuowqlkqijpmcimkcz.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.eazuowqlkqijpmcimkcz.supabase.co:5432/postgres

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here_change_this
FLASK_DEBUG=False

# Email Configuration (Gmail SMTP)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_gmail_address@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM_NAME=JobSprint Automation

# JobSprint Configuration
SYSTEM_NAME=JobSprint Ultra-Recent Automation
MAX_USERS=100
DEFAULT_SEARCH_FREQUENCY=5
ULTRA_RECENT_MODE=true
CANADA_OPTIMIZATION=true

# LinkedIn Configuration
LINKEDIN_RATE_LIMIT=10
LINKEDIN_MAX_RESULTS=50
LINKEDIN_TIMEOUT=30

# Security Configuration
ADMIN_EMAIL=admin@jobsprint.com
ADMIN_PASSWORD=change_this_admin_password
SESSION_TIMEOUT=3600

# Deployment Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/jobsprint.log

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CONTINUOUS_SEARCH=true
ENABLE_REAL_TIME_LOGS=true
ENABLE_ANALYTICS=true

# Rate Limiting
EMAIL_RATE_LIMIT=50
API_RATE_LIMIT=100

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=false
